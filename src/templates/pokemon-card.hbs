<div class="card">
    <div class="card-img-top">
        <img src="{{sprites.front.default}}" alt="{{name}}">
    </div>
    <div class="card-body">
        <h2 class="card-title">Ім'я: {{name}}</h2>
        <p class="card-text">Маса: {{weight}}</p>
        <p class="card-text">Ріст: {{height}}</p>
        <p class="card-text">Навички</p>
        <ul class="list-group">
            {{#each abilities}}
            <li class="list-group-item">{{ability.name}}</li>
            {{/each}}
        </ul>
    </div>
</div>