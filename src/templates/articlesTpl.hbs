<div class="card">
    <div class="card-img-top">
        <img src="{{urlToImage}}" alt="{{title}}">
    </div>
    <div class="card-body">
        <h2 class="card-title">{{title}}</h2>
        <p class="card-text">{{description}}</p>
        <p class="card-text">Автор: {{author}}</p>
        <p class="card-text">Джерело: {{source.name}}</p>
    </div>
</div>